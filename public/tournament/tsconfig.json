{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "outFile": "bundle.js",
    "module": "amd",
    "jsx": "react"
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "node_modules/react",
    "node_modules/react-dom"
  ]
}
