{
  "name": "rozpisovnik",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "backend"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "concurrently": "~8.2.0",
    "graphile-migrate": "^1.4.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.1",
    "standard-version": "^9.5.0",
    "syncpack": "^10.9.3",
    "typescript": "~5.1.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "upper-case",
          "pascal-case",
          "start-case"
        ]
      ]
    }
  },
  "scripts": {
    "postinstall": "husky install",
    "olymp": "yarn workspace olymp dev",
    "backend": "yarn workspace rozpisovnik-api start",
    "schema": "yarn workspace @app/graphql dev",
    "migrate": "graphile-migrate watch",
    "start": "concurrently --kill-others-on-fail 'yarn migrate' 'yarn backend' 'yarn schema' 'yarn olymp'",
    "cloc": "cloc --exclude-dir .next,.yarn,vendor,uploads,schema-split,node_modules,dist,build,schema.sql,schema.graphql,.pnp.cjs,.pnp.loader.mjs,yarn.lock,yarn-manifest.nix,olymp.psql,composer-project.nix,introspection.json,migrations ."
  },
  "resolutions": {
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@urql/core": "4.0.7",
    "mjml-core@npm:4.14.1": "patch:mjml-core@npm%3A4.14.1#./.yarn/patches/mjml-core-npm-4.14.1-e6ad05b5d7.patch"
  },
  "packageManager": "yarn@4.0.0-rc.45",
  "dependenciesMeta": {
    "mjml@4.14.1": {
      "unplugged": true
    }
  }
}
