{
  "name": "rozpisovnik",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "backend"
    ],
    "nohoist": [
      "rozpisovnik-api/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "concurrently": "~8.2.0",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "syncpack": "^10.5.1",
    "typescript": "~5.1.3"
  },
  "scripts": {
    "postinstall": "husky install",
    "olymp": "yarn workspace olymp dev",
    "kometa": "yarn workspace kometa dev",
    "backend": "yarn workspace rozpisovnik-api start",
    "schema": "yarn workspace @app/graphql dev",
    "migrate": "graphile-migrate watch",
    "start": "concurrently --kill-others-on-fail 'yarn migrate' 'yarn backend' 'yarn schema' 'yarn olymp' 'yarn kometa'"
  },
  "resolutions": {
    "@urql/core": "4.0.7"
  }
}
