{
  "name": "sirimbo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "resolutions": {
    "graphql": "15.4.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "scripts": {
    "frontend": "yarn workspace sirimbo-frontend dev",
    "frontend:build": "yarn workspace sirimbo-frontend build",
    "schema": "graphql-codegen --config graphql.config.yml",
    "schema:watch": "graphql-codegen --config graphql.config.yml --watch",
    "backend": "yarn workspace sirimbo-backend start",
    "migrate": "graphile-migrate watch",
    "start": "DEBUG=true concurrently --kill-others-on-fail 'yarn migrate' 'yarn frontend' 'yarn backend' 'yarn schema:watch'"
  }
}
