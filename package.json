{
  "name": "rozpisovnik",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "backend"
    ],
    "nohoist": [
      "rozpisovnik-api/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "concurrently": "~8.2.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "syncpack": "^10.6.1",
    "typescript": "~5.1.6"
  },
  "scripts": {
    "postinstall": "husky install",
    "olymp": "yarn workspace olymp dev",
    "backend": "yarn workspace rozpisovnik-api start",
    "schema": "yarn workspace @app/graphql dev",
    "migrate": "graphile-migrate watch",
    "start": "concurrently --kill-others-on-fail 'yarn migrate' 'yarn backend' 'yarn schema' 'yarn olymp'"
  },
  "resolutions": {
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@urql/core": "4.0.7"
  },
  "packageManager": "yarn@4.0.0-rc.48",
  "dependenciesMeta": {
    "react-hook-form@7.45.1": {
      "unplugged": true
    }
  }
}
