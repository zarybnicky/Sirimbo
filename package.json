{
  "name": "sirimbo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "schema"
  ],
  "resolutions": {
    "graphql": "15.4.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "scripts": {
    "frontend": "yarn workspace sirimbo-frontend dev",
    "schema": "yarn workspace sirimbo-schema dev",
    "backend": "yarn workspace sirimbo-backend start",
    "migrate": "graphile-migrate watch",
    "start": "DEBUG=true concurrently --kill-others-on-fail 'yarn migrate' 'yarn frontend' 'yarn backend' 'yarn schema'"
  }
}
