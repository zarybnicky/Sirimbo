#TopFeaturesBlock
    - foreach ($data as $key => $item)
        .Feature(style="#{$key != $offset && "display:none;"}")
            %h2.FeatureTitle
                = $item['name']

            .FeaturePhoto
                %img(src="#{$item['photoUrl']}" alt="#{$item['name']}")/

            %p

            %p.FeatureBlurb
                = $item['preview']

            %ul.FeatureLinks
                %li
                    %a(href="#{$item['url']}")
