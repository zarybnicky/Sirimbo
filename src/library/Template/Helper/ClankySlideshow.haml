:javascript
    (function($) {
        $(function() {
            if (typeof $.fn.topFeatures == "undefined") {
                $.getScript("/scripts/topFeatures.min.js", function() {
                    $("#TopFeaturesBlock").topFeatures()
                });
            } else {
                $("#TopFeaturesBlock").topFeatures();
            }
        })
    })(jQuery);
