{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2020", "DOM"],
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "jsx": "react",
    "strict": true,
    "module": "esnext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
