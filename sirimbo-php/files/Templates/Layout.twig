          content="r44xj2vskhlgkyqcqm1hdgga2jdfj-idvyys0277y96s72k-tq0z-yyjdu7h3el6pi2gek0i4ykq3xgiguufrvuhj8nbj4n4miwjhvumhp35jfrafyynhj4ee8ctzpzh" />
    <meta property="fb:app_id" content="132983570203245"/>
    {% block meta %}{% endblock %}

    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/main.css?v={{ frontendHash }}" />
    <title>
      {% block title %}TK Olymp{% endblock %}
      {% if block('title') != "TK Olymp" %} | TK Olymp{% endif %}
    </title>
  </head>
  <body>
    <div id="fb-root"></div>

    <nav class="navbar navbar-expand-md navbar-dark bg-red sticky-top">
      <div class="container">
        <div class="container">
          <h1 class="navbar-brand my-0 ml-lg-2 mx-3">
            <a href="/"><img alt="" src="/style/new-logo-oneline.png" /></a>
          </h1>
          {% block navigation %}
          <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target=".navbars">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbars collapse navbar-collapse ml-lg-0 ml-3">
            <div class="flex-column" style="flex-grow:1">
              <ul class="navbar-nav">
                {% for item in navbar[0] %}
                  {{ navbarItem(currentUri, item) }}
                {% endfor %}
                <li class="w-100"></li>
                {% if currentUser %}
                  <li class="userbox nav-item nav-link">
                    <a href="/member/profil">
                      <i class="fa-solid fa-user"></i> {{ currentUser.fullName }}
                    </a>
                  </li>
                {% else %}
                  <li class="nav-item dropdown">
                    <a href="/login" class="nav-link dropdown-toggle dropdown-no-arrow text-white" data-toggle="dropdown">
                      <i class="fa-solid fa-user"></i> Přihlásit
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right" role="menu" style="min-width:250px">
                      <li class="col-lg-12 pt-2">
                        <form action="/login" method="post">
                          <div class="form-group pb-1">
                            <input type="text" name="login" id="login" tabindex="1"
                                   class="form-control" placeholder="Uživatelské jméno" autofocus autocomplete="username">
                          </div>
                          <div class="form-group pb-1">
                            <input type="password" name="pass" id="pass" tabindex="2"
                                   class="form-control" placeholder="Heslo" autocomplete="current-password">
                          </div>
                          <div class="form-group pb-2">
                            <input type="hidden" name="action" value="login" />
                            <button type="submit" tabindex="3" class="btn btn-primary">
                              Přihlásit se
                            </button>
                          </div>
                          <a href="/registrace" tabindex="4">Registrovat se</a><br>
                          <a href="/nopassword" tabindex="5">Zapomněli jste heslo?</a><br>
                        </form>
                      </li>
                    </ul>
                  </li>
                {% endif %}
              </ul>
            </div>
          </div>
          {% endblock %}
        </div>
        {% if navbar[1] %}
          <div class="w-100" id="navbar-second">
            <div class="container">
              <div class="navbars collapse navbar-collapse ml-lg-0 ml-3">
                <div class="flex-column" style="flex-grow:1">
                  <ul class="navbar-nav">
                    {% for item in navbar[1] %}
                      {{ navbarItem(currentUri, item) }}
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </nav>

    {% block header %}
      {% if block('title') != "TK Olymp" %}
        <div class="header-section">
          <div class="container full">
            <h1>{{ block('title') }}</h1>
            {% block subheader %}{% endblock %}
          </div>
        </div>
      {% endif %}
    {% endblock %}

    {% for msg in getMessages() %}
      <div class="container">
        <div class="alert alert-{{ msg.type }}">{{ msg.text | raw }}</div>
      </div>
    {% endfor %}

    {% block content %}{% endblock %}

    <br/>
    <div id="footer">
      <div class="container">
        <div class="row text-center">
          <div class="col d-flex" style="flex-direction:column;justify-content:space-around;">
            <div>
              <a class="no-a" href="https://www.facebook.com/tkolymp"
                 target="_blank">
                <img alt="Facebook, stránka Taneční klub Olymp"
                     src="/style/fb-logo.png" />
              </a>
            </div>
            <div>
              design a realizace:
              <a href="mailto:jakub@zarybnicky.com">Jakub Zárybnický</a>
              <br>
              © 2018 TK Olymp
            </div>
          </div>
          <div class="col">
            <span>Podporuje nás:</span>
            <div>
              <a class="no-a" href="http://www.kr-olomoucky.cz/" target="_blank">
                <img alt="Olomoucký kraj" src="/style/logo-kraj.png" />
              </a>
              <br/>
              <a class="no-a" href="http://www.olomouc.eu/" target="_blank">
                <img alt="Město Olomouc" src="/style/logo-olomouc.jpg"
                     style="height:85px;width:auto;"/>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

