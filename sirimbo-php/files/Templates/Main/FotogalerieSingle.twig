{% extends "Layout.twig" %}

{% block title %}Fotogalerie{% endblock %}
{% block subheader %}<h2>{{ dir.gd_name }}</h2>{% endblock %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col-4 pt-3">{{ sidemenu | raw }}</div>
    <div class="col-8">
      <div class="text-center">
        {% if prevURI %}
          <a href="{{ prevURI }}">&lt;&lt;</a>
        {% else %}
          &lt;&lt;
        {% endif %}

        &nbsp;&bull;&nbsp;
        <a href="{{ returnURI }}">ZpÄ›t</a>
        &nbsp;&bull;&nbsp;

        {% if nextURI %}
          <a href="{{ nextURI }}">&gt;&gt;</a>
        {% else %}
          &gt;&gt;
        {% endif %}
      </div>

      <a href="{{ returnURI }}">
        <div class="foto_full">
          <img alt="{{ id }}" src="{{ src }}" style="max-width:100%"/>
        </div>
      </a>
    </div>
  </div>
</div>
{% endblock %}
