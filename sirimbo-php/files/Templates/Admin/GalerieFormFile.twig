{% extends "Layout.twig" %}

{% block content %}
<div class="container">
  <form action="" method="post">
    <div class="form-group">
      <label for="name">Popis</label>
      {{ text('name', name) }}
    </div>
    <div class="form-group">
      <label for="parent">Nadsložka</label>
      {{ selectAssoc('parent', dirs, 'id', 'text', parent) }}
    </div>
    <div class="form-group">
      <a class="btn btn-outline-primary" href="{{ returnURI }}">Zpět</a>
      <button class="btn btn-primary">Upravit</button>
    </div>
  </form>
</div>
{% endblock %}
