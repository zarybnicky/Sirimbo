{% extends "Layout.twig" %}

{% block content %}
<div class="container full">
  <form action="" method="POST">
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">Jméno</label>
      <div class="col-sm-10">
        {{ text('name', name) }}
      </div>
    </div>
    <div class="form-group row">
      <label for="description" class="col-sm-2 col-form-label">Popis</label>
      <div class="col-sm-10">
        {{ text('description', description, {'size': 35}) }}
      </div>
    </div>
    <table style="width:100%">
    {% for id, item in permissions %}
      <tr>
        <td class="r">{{ item.name }}</td>
        {% for val, desc in options %}
          <td class="center">
            {% if item[val] is defined %}
              <div class='mb-0 form-group form-check'>
                <input type=radio class='form-check-input' name='{{ id }}'
                       value='{{ val }}' {{ data[id] == val ? ' checked' : '' }} />
                <label class='form-check-label'>{{ desc }}</label>
              </div>
            {% endif %}
          </td>
        {% endfor %}
      </tr>
    {% endfor %}
    </table>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button class="btn btn-primary">{{ action }}</button>
        <a class="btn btn-outline-primary" href="/admin/permissions">Zpět</a>
      </div>
    </div>
  </form>
</div>
{% endblock %}
