{% extends "Layout.twig" %}

{% block content %}
<div class="container">
  <form class="form-inline" action="" method="get">
    <div class="form-group">
      {{ select('dir', dirs, dir ? dir : 'none') }}
    </div>
    <div class="form-group"><button class="btn btn-primary">Zobrazit</button></div>
  </form>

  <form action="" method="post">
    {% for item in photos %}
      <div class="foto_preview">
        <div class="foto_preview_in">
          <img alt="{{ item.id }}" src="{{ item.src }}" />
        </div>
        <div class="foto_desc">
          {{ radio('foto', item.id, item.id == checked, item.name) }}
          <br/><br/>
        </div>
      </div>
    {% endfor %}
    <div class="form-group" style="clear:both">
      <button class="btn btn-primary">Potvrdit</button>
      <a class="btn btn-outline-primary" href="/admin/aktuality">ZpÄ›t</a>
    </div>
  </form>
</div>
{% endblock %}
