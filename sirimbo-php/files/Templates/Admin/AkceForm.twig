{% extends "Layout.twig" %}

{% block title %}Správa akcí{% endblock %}
{% block subheader %}<h2>{{ action == 'add' ? 'Přidat' : 'Upravit' }} akci</h2>{% endblock %}

{% block content %}
<div class="container">
  <form action="" method="POST">
    <div class="form-group row">
      <label for="jmeno" class="col-sm-2 col-form-label">Název akce</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" placeholder="Název akce" name="jmeno" value="{{ jmeno }}" />
      </div>
    </div>
    <div class="form-group row">
      <label for="kde" class="col-sm-2 col-form-label">Název akce</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" placeholder="Místo akce" name="kde" value="{{ kde }}" />
      </div>
    </div>
    <div class="form-group row">
      <label for="info" class="col-sm-2 col-form-label">Další info</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="info" rows="10">{{ info }}</textarea>
      </div>
    </div>
    <div class="form-group row">
      <label for="od" class="col-sm-2 col-form-label">Začátek (*)</label>
      <div class="col-sm-10">
        <input class="form-control" type="date" name="od" value="{{ od }}" />
      </div>
    </div>
    <div class="form-group row">
      <label for="od" class="col-sm-2 col-form-label">Konec (*)</label>
      <div class="col-sm-10">
        <input class="form-control" type="date" name="do" value="{{ do }}" />
        <small class="form-text text-muted">(pokud je prázdné, počítá se jako "Od")</small>
      </div>
    </div>
    <div class="form-group row">
      <label for="kapacita" class="col-sm-2 col-form-label">Kapacita (*)</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="kapacita" value="{{ kapacita }}" />
      </div>
    </div>
    <div class="row">
      <div class="offset-sm-2 col-sm-10">
        <div class="form-check">
          {{ checkbox('visible', 'visible', visible, 'Zviditelnit') }}
        </div>
        <div class="form-check">
          {{ checkbox('lock', 'lock', lock, 'Uzamknout') }}
        </div>
        <div class="form-group">
          <button class="btn btn-primary">{{ action == 'add' ? 'Přidat' : 'Upravit' }}</button>
          <a class="btn btn-outline-primary" href="/admin/akce">Zpět</a>
        </div>
      </div>
    </div>
  </form>
</div>
{% endblock %}
