{% extends "Layout.twig" %}

{% block title %}Správa rozpisů{% endblock %}
{% block subheader %}<h2>{{ action == 'add' ? 'Přidat' : 'Upravit' }} rozpis</h2>{% endblock %}

{% block content %}
<div class="container">
  <form action="" method="POST">
    <div class="form-group row">
      <label for="trener" class="col-sm-2 col-form-label">Trenér</label>
      <div class="col-sm-10">
        {{ userSelect(treneri, 'trener', trener) }}
      </div>
    </div>
    <div class="form-group row">
      <label for="kde" class="col-sm-2 col-form-label">Místo</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="kde" value="{{ kde }}" />
      </div>
    </div>
    <div class="form-group row">
      <label for="datum" class="col-sm-2 col-form-label">Datum</label>
      <div class="col-sm-10">
        <input class="form-control" type="date" name="datum" value="{{ datum }}" />
      </div>
    </div>
    <div class="row">
      <div class="offset-sm-2 col-sm-10">
        <div class="form-check">
          {{ checkbox('visible', 'visible', visible, 'Zviditelnit') }}
        </div>
        <div class="form-check">
          {{ checkbox('lock', 'lock', lock, 'Uzamknout') }}
        </div>
        <div class="form-group">
          <button class="btn btn-primary">{{ action == 'add' ? 'Přidat' : 'Upravit' }}</button>
          <a class="btn btn-outline-primary" href="/admin/rozpis">Zpět</a>
        </div>
      </div>
    </div>
  </form>
</div>
{% endblock %}
