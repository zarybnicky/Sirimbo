{% extends "Layout.twig" %}

{% block content %}
<div class="container">
  <form action="" method="POST">
    <h3>Pár: {{ fullName }}</h3>
    <h4>Standard</h4>
    <div class="form-group">
      <label for="stt-trida">Třída</label>
      {{ selectLiteral('stt-trida', ['Z', 'H', 'D', 'C', 'B', 'A', 'M'], stt_trida) }}
    </div>
    <div class="form-group">
      <label for="stt-body">Body</label>
      {{ text('stt-body', stt_body) }}
    </div>
    <div class="form-group">
      <label for="stt-finale">Finále</label>
      {{ text('stt-finale', stt_finale) }}
    </div>

    <h4>Latina</h4>
    <div class="form-group">
      <label for="lat-trida">Třída</label>
      {{ selectLiteral('lat-trida', ['Z', 'H', 'D', 'C', 'B', 'A', 'M'], lat_trida) }}
    </div>
    <div class="form-group">
      <label for="lat-body">Body</label>
      {{ text('lat-body', lat_body) }}
    </div>
    <div class="form-group">
      <label for="lat-finale">Finále</label>
      {{ text('lat-finale', lat_finale) }}
    </div>
    <div class="form-group">
      <button name="action" value="edit_confirm" class="btn btn-primary">Upravit</button>
      <a class="btn btn-outline-primary" href="/admin/pary">Zpět</a>
    </div>
</div>
{% endblock %}
