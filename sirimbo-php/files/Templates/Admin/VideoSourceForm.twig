{% extends "Layout.twig" %}

{% block title %}Správa zdrojů videa{% endblock %}
{% block subheader %}<h2>{{ action == 'add' ? 'Přidat' : 'Upravit' }} zdroj</h2>{% endblock %}

{% block content %}
<div class="container">
  <form action="" method="post">
    <div class="form-group">
      <label for="uri">
        ID kanálu (např. <code>https://www.youtube.com/channel/<b>UCopG139AfgpmaswNXmEwX2Q</b></code>)<br>
        Ostatní pole se později zjistí z YouTube, pokud zůstanou prázdná.
      </label>
      <input class="form-control" type="text" name="uri" value="{{ uri }}" />
    </div>
    <div class="form-group">
      <label for="title">Jméno</label>
      <input class="form-control" type="text" name="title" value="{{ title }}" />
    </div>
    <div class="form-group">
      <label for="desc">Popis</label>
      <input class="form-control" type="text" name="desc" value="{{ desc }}" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary">{{ action == 'add' ? 'Přidat' : 'Upravit' }}</button>
      <a class="btn btn-outline-primary" href="/admin/video/source">Zpět</a>
    </div>
  </form>
</div>
{% endblock %}
