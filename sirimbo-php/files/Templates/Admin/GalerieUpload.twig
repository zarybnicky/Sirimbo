{% extends "Layout.twig" %}

{% block title %}Správa fotogalerie{% endblock %}
{% block subheader %}<h2>Upload</h2>{% endblock %}

{% block content %}
  <div class="container">
    <form enctype="multipart/form-data" action="" method="post">
      <div class="form-group">
        <input type="file" multiple name="files[]" class="form-control-file"/>
      </div>
      <div class="form-group">
        <label for="dir">Složka</label>
        {{ selectAssoc('dir', dirs, 'id', 'text', dir) }}
      </div>
      <div class="form-group">
        <button class="btn btn-primary">Nahrát na server</button>
        <a class="btn btn-outline-primary" href="/admin/galerie">Zpět</a>
      </div>
    </form>
  </div>
{% endblock %}
