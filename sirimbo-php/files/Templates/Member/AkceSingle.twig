{% extends "Layout.twig" %}

{% block content %}
<div class="container">
  {% include 'Member/AkceHeader.twig' with {'item': data} %}
  <div class="text-center">
    {% if not items %}
      Nikdo není přihlášený<br/>
    {% else %}
      <table class="mx-auto text-left">
        <tr>
          <th>Jméno</th>
          <th>Skupiny</th>
        </tr>
        {% for item in items %}
          <tr>
            <td>{{ item.u_jmeno }} {{ item.u_prijmeni }}</td>
            <td>{{ item.s_name }}</td>
          </tr>
        {% endfor %}
      </table>
    {% endif %}
    <a class="btn btn-outline-primary" href="/member/akce">Zpět</a>
  </div>
</div>
{% endblock %}
