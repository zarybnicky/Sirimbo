<div class="trenink-header">
  <div class="title">
    {{ item.u_jmeno }} {{ item.u_prijmeni }}
    {% if item.canEdit %}
      <div class="btn-group">
        <button type="button" class="btn btn-xs pt-0" data-toggle="dropdown">
          <img alt="Upravit" width="16" src="/style/icon-gear.png" />
        </button>
        <div class="dropdown-menu dropdown-menu-right">
          <a class="dropdown-item" href="/admin/nabidka/edit/{{ item.id }}">Upravit</a>
          <a class="dropdown-item" href="/admin/nabidka/detail/{{ item.id }}">Upravit rezervace</a>
        </div>
      </div>
    {% endif %}
  </div>
  <div class="date">
    {{ item.n_od | date('j. n. Y') }}
    {% if item.n_do and item.n_od != item.n_do %}
      - {{ item.n_do | date('j. n. Y') }}
    {% endif %}
  </div>

  {% if item.n_max_pocet_hod > 0 %}
    <div>
      <span class="little">Maximálně hodin/pár:</span>
      <span class="nadpis">{{ item.n_max_pocet_hod }}</span>
    </div>
  {% endif %}
  <div>
    <span class="little">Volných hodin: </span>
    <span class="nadpis">
      {{ item.n_pocet_hod - item.hourReserved }} z {{ item.n_pocet_hod }} nabízených
    </span>
  </div>
</div>
