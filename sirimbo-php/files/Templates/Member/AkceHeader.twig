<div class="trenink-header">
  <div class="title">
    {{ item.jmeno }}
    {% if item.canEdit %}
      <div class="btn-group">
        <button type="button" class="btn btn-xs pt-0" data-toggle="dropdown">
          <img alt="Upravit" width="16" src="/style/icon-gear.png" />
        </button>
        <div class="dropdown-menu dropdown-menu-right">
          <a class="dropdown-item" href="/admin/akce/edit/{{ item.id }}">Upravit</a>
          <a class="dropdown-item" href="/admin/akce/detail/{{ item.id }}">Upravit účastníky</a>
          <a class="dropdown-item" href="/admin/akce/dokumenty/{{ item.id }}">Upravit dokumenty</a>
        </div>
      </div>
    {% endif %}
  </div>
  <div class="date">{{ item.datum }}</div>
  <div class="emph">{{ item.kde }}</div>
  <div><span class="big">Kapacita: </span> {{ item.kapacita }}</div>
  <div><span class="big">Volných míst: </span> {{ item.volno }}</div>
  {% if item.info %}
    <div class="text-left mb-2">{{ item.info | raw }}</div>
  {% endif %}
  {% if item.dokumenty %}
    <div class="text-left mb-2">
      <span class="big">Dokumenty: </span>
      <ul>
        {% for row in item.dokumenty %}
          <li><a href="/member/download?id={{ row.id }}">{{ row.name }}</a></li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}
</div>
