{% extends "Layout.twig" %}

{% block title %}Správa akcí{% endblock %}

{% block content %}
<div class="container">
  <form action="" method="POST">
    <div class="trenink-header">
      <div class="h5 mb-0">
        {{ data.name }}
      </div>
      <div class="date">
        <date-range from="{{ data.since }}" to="{{ data.until }}"></date-range>
      </div>
      <div class="font-weight-bold">{{ data.location_text }}</div>
      <div>
        <span class="big">Volných míst: </span>
        {{ data.capacity - data.reserved }} / {{ data.capacity }}
      </div>
      {% if data.description %}
        <div class="text-left mb-2">{{ data.description | raw | nl2br }}</div>
      {% endif %}
    </div>

    <table>
      <tr>
        <th>Uživatel</th>
        <th></th>
      </tr>
      {% for row in items %}
        <tr>
          <td>{{ userSelect(users, row.id ~ '-user', row.user_id) }}</td>
          <td><button class="btn btn-primary" name="remove" value="{{ row.id }}">Odstranit</button>
        </tr>
      {% endfor %}
      <tr>
        <td>{{ userSelect(users, 'add-user', 0) }}</td>
        <td><button class="btn-primary" name="add" value="add">Přidat</button></td>
      </tr>
    </table>
    <button class="btn btn-primary">Uložit</button>
    <a class="btn btn-outline-primary" href="/admin/akce">Zpět</a>
  </form>
</div>
{% endblock %}
