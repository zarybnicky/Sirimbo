{% extends "Layout.twig" %}

{% block title %}Správa článků{% endblock %}
{% block subheader %}<h2>{{ action == 'add' ? 'Přidat' : 'Upravit' }} článek</h2>{% endblock %}

{% block content %}
<div class="container">
  <form action="" method="POST">
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">Název</label>
      <div class="col-sm-10">
        <input type="text" name="name" placeholder="Název"
               class="form-control" value="{{ name }}" />
        <small id="nameHelp" class="form-text text-muted">Nejvíce 255 znaků</small>
      </div>
    </div>
    {% if createdAt %}
      <div class="form-group row">
        <label for="createdAt" class="col-sm-2 col-form-label">Publikováno</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="createdAt" value="{{ createdAt | date('j. n. Y H:i') }}" />
        </div>
      </div>
    {% endif %}
    <div class="form-group row">
      <label for="summary" class="col-sm-2 col-form-label">Shrnutí</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="summary" rows="5">{{ summary }}</textarea>
      </div>
    </div>
    <div class="form-group row">
      <label for="text" class="col-sm-2 col-form-label">Text článku</label>
      <div class="col-sm-10">
        <ck-editor name="text" initialState="{{ text }}"></ck-editor>
      </div>
    </div>

    <div class="row">
      <div class="offset-sm-2 col-sm-10">
        <div class="form-group">
          <a class="btn btn-outline-primary" href="/admin/aktuality">Zpět</a>
          {% if action == 'add' %}
            <button name="action" value="foto" class="btn btn-primary">Přidat fotky</button>
            <button name="action" value="save" class="btn btn-primary">Přeskočit a uložit</button>
          {% else %}
            <button name="action" value="save" class="btn btn-primary">Upravit</button>
          {% endif %}
        </div>
      </div>
    </div>
  </form>
</div>
{% endblock %}
